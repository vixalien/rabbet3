// variables
max-width = 580px
body-margin = 0 auto
body-padding = 0 10px

// page setting
:root
	--max-width max-width
	--body-margin body-margin
	--body-padding body-padding

*, :before, :after
	box-sizing border-box

body
	margin 0
	padding 0
	font-family system-ui, sans-serif
	font-size 17px

main
	max-width var(--max-width)
	margin var(--body-margin)
	padding var(--body-padding)

/* basic styling */
main
	margin-bottom 100px

// links are subtle
a:not(button)
	color #999
	&.normal
		color inherit
	text-decoration none
	border-bottom 1px dashed

// hr is minimal
hr
	border 0
	border-top 1px solid
	margin-bottom 20px

// badge
.badge
	padding 0px 5px
	border-radius 5px
	font-weight 500
	font-size 14px
	color #ab570a
	background-color #ffefcf
	border 1px solid #f5a623

/* components */
.input
	margin-bottom 30px
	.label
		margin-bottom 5px
	input, textarea, select
		border-radius 3px
		background-color #e9e9e9
		border 0
		padding 5px
		width 100%
		border 2px solid transparent
		font-family inherit
		outline 0
		&:active, &:focus
			border-color #000
	.error, .info
		font-size small
	.error
		color #C50000
	textarea
		resize vertical

// button
// 1. 2 states default, disabled, delete
// 2. 4 styles default, hovered, active & focused
button, .button
	color inherit
	text-decoration none
	font-size 14px
	background-color transparent
	border 1px solid #999
	padding 5px 10px
	border-radius 3px
	font-family inherit
	cursor pointer
	&:hover, &:active, &:focus
		border-color currentColor
	&[disabled]
		background-color #eee !important
		border-color #eee !important
		color inherit !important
		cursor not-allowed
	&.delete
		border-color #f7d4d6
		color #c50000
		&:not(.outline)
			background-color #F7D4D6
		&:hover, &:active, &:focus
			border-color #c50000

// header
// [ul.nav] with [li] items
// [li] has [a] (main link)
// selected [li] has [.selected] class
nav.header
	padding 10px 0
	display flex
	justify-content space-between
	.title
		font-weight bold
	ul.nav
		display flex
		margin 0
		padding 0
		gap 20px
		li
			display block
			color #999999
			&.selected a
				color #000

// pages list
ol.pages
	li
		margin-bottom 30px
		h3
			margin 0
		.spacer
			height 10px
	@media screen and (max-width max-width)
		list-style-position inside
		padding 0
		li::marker
			line-height 0

// links on page
ol.links
	li
		margin-bottom 30px
		.input
			margin-bottom 10px
	@media screen and (max-width max-width)
		list-style-position inside
		padding 0
		li::marker
			line-height 2

// details
details
	border-radius 5px
	padding 10px 0 10px 10px
	summary
		cursor pointer
	&[open]
		summary
			border-bottom 1px solid
			padding-bottom 10px
			margin-bottom 10px

.delete-page
	color #ff1a1a

// .preview-iframe
.preview-iframe
	border none
	width 100%
	min-height 50vh

// live editor
.editor-page
	.live-view
		display none
		transition 0.3s box-shadow
	&.open
		.live-view
			display flex
			flex-direction column
			margin var(--body-margin)
			padding var(--body-padding)
			flex 1
			border-left 1px solid
			.live-title
				padding 10px 0
				span
					.title
						font-weight bold
				.close-live
					float right
			.live-view-box-html
				flex 1
				display flex
				margin-bottom 10px
	@media screen and (min-width (max-width * 2))
		&.open
			display flex
			max-width calc(var(--max-width) * 2)
			margin var(--body-margin)
			padding var(--body-padding)
			gap 20px
			main
				max-width unset
				flex 1
	@media screen and (max-width (max-width * 2))
		&.open
			.live-view
				padding 0 20px
				border 0
				background-color #fff
				box-shadow 0 0 1px 200vw #0000008c
				z-index 100
				position fixed
				top 50%
				left 50%
				transform translate(-50%, -50%)
				max-width calc(100% - 40px)
				width calc(var(--max-width) - 40px)
				margin var(--body-margin)
				border-radius 5px
				height 800px
				max-height calc(100% - 40px)

.histogram-container
	.histogram
		width 100%
		min-height 100px
		display flex
		margin 10px 0
		flex-direction row
		gap 5vw
		justify-content space-between
		.block
			border-left 1px dashed #ccc
			flex 1
			.bar-title
				// padding 5px
			.bars
				display flex
				align-items flex-end
				height 100px
				gap 3px
				/* width calc(calc(100% / 7) ); */
				.bar
					width 100%
					border-radius 5px 5px 0 0
					height 100%
	.color-block
		width 14px
		height 14px
		display inline-block
		border 1px solid